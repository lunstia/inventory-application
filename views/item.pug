extends layout 

block content 
    img(src=item.image)
    h1=item.name 
    p=item.description 
    p='Price: ' + item.price
    p=item.quantity + ' in stock'
    hr
    button(onclick=`location.href = '${item.url + '/update'}'`) Update Item 
    button(onclick="const dialog = document.getElementById('deleteDialog'); dialog.showModal();") Delete Item
    dialog(id="deleteDialog")
        form(method="POST" action=item.url + '/delete')
                p Are you sure you want to delete this item?
                br
                button(type="submit") Delete Item
                button(type="button" onclick="const dialog = document.getElementById('deleteDialog'); dialog.close();") Cancel